<%= form_for @list do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<% @restaurants.each do |r| %>
<% if params[r.id] %>
<%= check_box_tag "restaurant_ids[]", r.id, checked: true  %>
<% else %>
<%= check_box_tag "restaurant_ids[]", r.id  %>
<% end %>
<%= label_tag(r.name) %>
<br/>
<% end %>
<%= f.submit 'submit' %>
<% end %>